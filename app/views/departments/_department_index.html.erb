<div class="row">
  <div class="col-lg-12 portlets">
    <div class="panel">
      <div class="panel-header panel-controls">
        <h3><strong><%= @department['personal_details']['name']%></strong></h3>
        <div class="col-md-12">
        	<%= link_to t('.create_sub_department'), "#", class: "btn btn-embossed btn-primary m-r-20 ", "data-toggle" => 'modal' , :onclick => "return new_sub_department_create(this)" %>
        </div>
          <div class="modal fade" id="modal-responsive" aria-hidden="true">
          </div>
          <div class="modal fade" id="modal-delete" aria-hidden="true">
          </div>
          <div class="panel widget-member clearfix col-md-6">
              <div class="col-xs-3">
                <!-- <img src="/assets/global/avatars/user2.png" alt="avatar 12" class="pull-left img-responsive"> -->
                <%= @department['avatar'].present? ? (image_tag @department['avatar'].avatars[0]) : (image_tag "global/default_image.jpg")%>
                
              </div>
              <div class="col-xs-9">
                <h3 class="m-t-0 member-name"><strong><%= @department['personal_details']['name']%></strong></h3>
                <p class="member-job"><%= @department['personal_details']['name']%></p>
                <div class="row">
                  <div class="col-xlg-6">
                    <p><i class="icon-envelope c-gray-light p-r-10"></i> <%= @department['branch']['branch_profile']['address_line1'] %></p>
                    <p><i class="fa fa-facebook c-gray-light p-r-10"></i> <%= @department['branch']['branch_profile']['city']%></p>
                  </div>
                  <div class="col-xlg-6 align-right">
                    <p><i class="icon-calendar c-gray-light p-r-10"></i> <%= @department['personal_details']['contact_number'] %></p>
                    <p><i class="icon-target c-gray-light p-r-10"></i> <%=   @department['branch']['branch_profile']['website']%></p>
                  </div>
                </div>
              </div>
            </div>
            <div class="panel widget-member clearfix col-md-6">
              <div class="col-xs-3">
                <!-- <img src="/assets/global/avatars/user2.png" alt="avatar 12" class="pull-left img-responsive"> -->
                <%= @department['department_head_details']['avatar'].present? ? (image_tag @department['department_head_details']['avatar']) :  (image_tag "default_user.png")%>
              </div>
              <div class="col-xs-9">
                <h3 class="m-t-0 member-name"><strong><%= @department['department_head_details']['user_detail']['name'] %></strong></h3>
                <p class="member-job"><%= @department['department_head_details']['user']['user_type'] %></p>
                <div class="row">
                  <div class="col-xlg-6">
                    <p><i class="icon-envelope c-gray-light p-r-10"></i> <%= @department['department_head_details']['user_detail']['address_line1']%></p>
                    <p><i class="fa fa-facebook c-gray-light p-r-10"></i> <%= @department['department_head_details']['user_detail']['city'] %></p>
                  </div>
                  <div class="col-xlg-6 align-right">
                    <p><i class="icon-calendar c-gray-light p-r-10"></i> <%= @department['department_head_details']['user_detail']['contact_number'] %></p>
                    <p><i class="icon-target c-gray-light p-r-10"></i> <%= @department['department_head_details']['user']['email'] %></p>
                  </div>
                </div>
              </div>
            </div>
      </div>
      <div class="panel-content">
        <div class="filter-left">
          <table class="table table-dynamic table-tools">
            <thead>
              <tr>
                <th><%= PersonalDetail.human_attribute_name(:name)%></th>
                <th><%= t('.head')%></th>
                <th><%= t('.manage')%></th>
              </tr>
            </thead>
            <tbody>	          
              <% @sub_department.each do |d| %>
                <tr>
                  <td><%= d["name"] %></td>
                  <td id="<%= d["head_user"]["id"]%>"><%= d["head_user"].present?  ? (link_to d['head_user']['name'], "#", "data-toggle" => 'modal', class: "", id: d["head_user"]["id"], :onclick => "return show_sub_department_head(this)") : (link_to t('.assign'), "#", "data-toggle" => 'modal', class: "", id: d["id"], :onclick=> "return create_sub_department_head(this)")%></td>
                  <td id="<%= d["id"]%>">
                  	<%= link_to t('.edit'), "#", class: "", "data-toggle" => 'modal', id: d["id"], :onclick=> "return edit_sub_department(this)"%> | <%= link_to t('.delete'), "#", class: "", "data-toggle" => 'modal', id: d["id"], :onclick=> "return delete_sub_department(this)"%>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
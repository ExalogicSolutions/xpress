<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header bg-primary">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="icons-office-52"></i></button>
    </div>
    <div class="modal-body">
      <div class="p-t-20 m-b-20 p-l-40">
      <p>Are you sure you want to delete this :   <b><%= @feedback_question.question %> &nbsp;feedback question</b>?</p>
      </div>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default btn-embossed" data-dismiss="modal">Cancel</button>
      <%= link_to "Delete", @feedback_question, method: :delete,  class: "btn btn-primary btn-embossed", "data-dismiss" => "modal"%>
    </div>
  </div>
</div>
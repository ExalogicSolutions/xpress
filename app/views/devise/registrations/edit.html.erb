<div class="row">
<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-default">
    <div class="panel-header bg-dark">
      <h2 class="panel-title"><strong><%= t(".edit")%></strong></h2>
    </div>
    <div class="panel-content bg-dark">
      <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-horizontal form-validation" }) do |f| %>
            <%= devise_error_messages! %>
            <div class="form-group">
              <label class="col-sm-3 control-label"><%= t(".user_name")%></label>
              <div class="col-sm-9 prepend-icon">
                <%= f.text_field :user_name, autofocus: true, class: "form-control"%>
                <i class="icon-user"></i>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label"><%= t(".email")%></label>
              <div class="col-sm-9 prepend-icon">
                <%= f.email_field :email, class: "form-control", readonly: true %>
                <i class="icon-envelope"></i>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label"><%= t(".password")%></label>
              <div class="col-sm-9 prepend-icon">
                <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
                <i class="icon-lock"></i>
                <%= t '.leave_blank'%>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label"><%= t(".password_confirmation")%></label>
              <div class="col-sm-9 prepend-icon">
                <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
                <i class="icon-lock"></i>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label"><%= t(".current_password")%></label>
              <div class="col-sm-9 prepend-icon">
                <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
                <i class="icon-lock"></i>
                <%= t '.confirmation'%>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-9 col-sm-offset-3">
                <div class="pull-right">
                  <%= link_to t('.cancel'), :back, class: "cancel btn btn-embossed btn-default m-b-10 m-r-0" %>
                  <%= f.submit t('.update'), class: "btn btn-embossed btn-primary m-r-20" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
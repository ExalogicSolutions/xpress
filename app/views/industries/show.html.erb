<div class="row">
  <div class="col-lg-12 portlets">
    <div class="panel">
      <div class="panel-header panel-controls">
        <h3><strong><%= @industry.name%></strong></h3>
        <%= link_to t('.create_branch'), "#", class: "btn btn-embossed btn-primary m-r-20", "data-toggle" => 'modal', industry_id: @industry.id, onclick: "create_branch(this)"%>
          <div class="modal fade" id="modal-show" aria-hidden="true"></div>
          <div class="modal fade" id="modal-new" aria-hidden="true"></div>
          <div class="modal fade" id="modal-edit" aria-hidden="true"></div>
          <div class="modal fade" id="modal-delete" aria-hidden="true"></div>
      </div>
      <div class="panel-content">
        <div class="filter-left">
          <table class="table table-dynamic table-tools">
            <thead>
              <tr>
                <th><%= PersonalDetail.human_attribute_name(:name)%></th>
                <th><%= PersonalDetail.human_attribute_name(:city)%></th>
                <th><%= PersonalDetail.human_attribute_name(:contact_number)%></th>
                <th><%= PersonalDetail.human_attribute_name(:website)%></th>
                <th><%= t('.no_of_departments')%></th>
                <th><%= t('.head')%></th>
                <th><%= t('.manage')%></th>
              </tr>
            </thead>
            <tbody>
              <% @branches.each do |b| %>
                <tr>
                  <td><%= b[:name] ? (link_to b[:name], "#", "data-toggle" => 'modal', id: b[:id], onclick: "show_branch(this)") : "-" %></td>
                  <td><%= b[:city] ? b[:city] : "-" %></td>
                  <td><%= b[:contact_number] ? b[:contact_number] : "-" %></td>
                  <td><%= b[:website] ? b[:website] : "-" %></td>
                  <td><%= b[:department_count] %></td>
                  <td><%= b[:head_name] ? (link_to b[:head_name], "#", "data-toggle" => 'modal', id: b[:head_id], onclick: "show_branch_head(this)") : (link_to "Assign", "#", "data-toggle" => 'modal', id: b[:id], onclick: "create_branch_head(this)")%></td>
                  <td>
                    <%= link_to t('.edit'), "#", "data-toggle" => 'modal', id: b[:id], onclick: "edit_branch(this)"%> | <%= link_to t('.delete'), "#", "data-toggle" => 'modal', id: b[:id], onclick: "delete_branch(this)"%>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-lg-12 portlets">
    <div class="panel">
      <div class="panel-header panel-controls">
          <div class="modal fade" id="modal-new-show" aria-hidden="true"></div>
          <div class="modal fade" id="modal-edit-show" aria-hidden="true"></div>
          <div class="modal fade" id="modal-delete" aria-hidden="true"></div>
      </div>
      <div class="panel-content">
        <div class="filter-left">
          <table class="table table-dynamic table-tools">
            <thead>
              <tr>
                <th>Industry</th>
                <th>Branch</th>
                <th>Department</th>
              </tr>
            </thead>
            <tbody>
              <% @menus.each do |m| %>
                <tr>
                  <td><%= m.department.branch.industry.name %></td>
                  <td><%= m.department.branch.personal_detail.name%></td>
                  <td><%= m.department.personal_detail.name %></td>
                  <td>
                    <%= link_to "Edit", "#", "data-toggle" => 'modal', id: m[:id], onclick: "edit_branch(this)"%> | <%= link_to "Delete", "#", "data-toggle" => 'modal', id: m[:id], onclick: "delete_branch(this)"%>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
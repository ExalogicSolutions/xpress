<div class="row">
  <div class="col-lg-12 portlets">
    <div class="panel">
      <div class="panel-header panel-controls">
        <h3><strong><%=@sub_department.personal_detail.name%></strong></h3>
          <div class="modal fade" id="modal-responsive" aria-hidden="true">
          </div>
      </div>
            <div class="clearfix col-md-6">
                <div class="col-xs-3">
                  <img src="/assets/global/avatars/user2.png" alt="avatar 12" class="pull-left img-responsive">
                </div>
                <div class="col-xs-9">
                  <h3 class="m-t-0 member-name"><strong><%= @sub_department.personal_detail.name%></strong></h3>
                  <p class="member-job"><%= @sub_department.department.personal_detail.name%></p>
                  <div class="row">
                    <div class="col-xlg-6">
                      <p><i class="icon-envelope c-gray-light p-r-10"></i> <%= @sub_department.personal_detail.address_line1%></p>
                      <p><i class="fa fa-facebook c-gray-light p-r-10"></i> <%= @sub_department.personal_detail.city%></p>
                    </div>
                    <div class="col-xlg-6 align-right">
                      <p><i class="icon-calendar c-gray-light p-r-10"></i> <%= @sub_department.personal_detail.contact_number%></p>
                      <p><i class="icon-target c-gray-light p-r-10"></i> <%= @sub_department.personal_detail.website%></p>
                    </div>
                  </div>
                </div>
              </div>
              <div class="clearfix col-md-6">
                <div class="col-xs-3">
                  <img src="/assets/global/avatars/user2.png" alt="avatar 12" class="pull-left img-responsive">
                </div>
                <div class="col-xs-9">
                  <h3 class="m-t-0 member-name"><strong><%= @sub_department.user.personal_detail.name %></strong></h3>
                  <p class="member-job"><%= @sub_department.user.user_type %></p>
                  <div class="row">
                    <div class="col-xlg-6">
                      <p><i class="icon-envelope c-gray-light p-r-10"></i> <%= @sub_department.user.personal_detail.address_line1 %></p>
                      <p><i class="fa fa-facebook c-gray-light p-r-10"></i> <%= @sub_department.user.personal_detail.city %></p>
                    </div>
                    <div class="col-xlg-6 align-right">
                      <p><i class="icon-calendar c-gray-light p-r-10"></i> <%= @sub_department.user.personal_detail.contact_number %></p>
                      <p><i class="icon-target c-gray-light p-r-10"></i> <%= @sub_department.user.email %></p>
                    </div>
                  </div>
                </div>
              </div>      
      <div class="panel-content">
        <div class="filter-left">
          <table class="table table-dynamic table-tools">
            <thead>
            </thead>
            <tbody>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
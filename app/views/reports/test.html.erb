 <script type="text/javascript">
    var ratingValue = {}
      $(document).ready(function(){
      	$('.abc').change(function(){
		   var id = $(this).attr('id');
		   var value = $(this).val();

		   ratingValue[id] = value
		   $('#rating_value').val(JSON.stringify(ratingValue))
		});  
        $('#feedback_div').hide();
              
			      $(".abc").barrating({
			        theme: '<%= @rating_type%>',
			        showValues: false,
			        wrapperClass: 'br-wrapper'
			      });


			   var mySlider;
				
				    mySlider= $('.bxslider').bxSlider({
				      auto: true,
				      autoControls: true,
				      responsive: true,
				      randomStart: true
				});
               
              $(document).on ("click",".show_all_preview",function(){
			     var itemId = $(this).attr('id');
			        $.ajax({
			          async : true,
			          type : 'GET',
			          url : "/menus/show_images",
			          data : {'id' : itemId},    
			          success : function(data) {
			            $('#modal-show-image').html(data);
			            $('#modal-show-image').modal('show');
			          },
			          error : function(data) {
			            alert("Error occured. Please try again!");
			          }
			        });
			   });
 
	           $('.toggle').on ("click",function(){ 
	              if($(this).hasClass('off') == true){
	              	$('#feedback_div').slideDown('slow');
    	              $('#menu_div').slideUp('slow');
	              }else{
	                  
    	              $('#feedback_div').slideUp('slow'); 
                    $('#menu_div').slideDown('slow');                      
                    mySlider.reloadShow();
		            }	                                            
	           });
         });  
        </script>
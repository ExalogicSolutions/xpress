           <script src="/assets/bootstrap-toggle.min.js"></script>
 <script src="/assets/scripts.js"></script>
         

 <script type="text/javascript">
    var ratingValue = {}
      $(document).ready(function(){
      	$('.abc').change(function(){
		   var id = $(this).attr('id');
		   var value = $(this).val();

		   ratingValue[id] = value
		   $('#rating_value').val(JSON.stringify(ratingValue))
		});  
      
              
			      $(".abc").barrating({
			        theme: '<%= @rating_type%>',
			        showValues: false,
			        wrapperClass: 'br-wrapper'
			      });

      });
	         
        </script>